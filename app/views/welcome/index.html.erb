<body> 

  <h1>My Rails Girls Diary</h1>

  <div class ="btn-group" role="group">
    <button type="button" class="btn btn-default"><%= link_to("View all diary entries", entries_path, :class => "btn") %></button>
  </div>

  <div class="container">
    <% for entry in @entries %>
      <h2><%= entry.title %></h2>
      <p><%= entry.date %></p>
      <p><%= entry.contents %></p>
    <% end %>
  </div>

  <div>
    <h1>My favourite websites</h1>

    <% for url, name in @websites %>
      <li><a href="<%= url %>"><%= name %></a></li>
    <% end %>

  </div>

  <img src="http://railsgirls.com/images/rg-warsaw.png"/>

</body>
